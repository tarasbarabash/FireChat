<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="message"
            type="com.tarasbarabash.firechat.Model.Message" />

        <variable
            name="adapter"
            type="com.tarasbarabash.firechat.Adapter.MessagesAdapter" />

        <variable
            name="view"
            type="android.view.View" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/date_background"
            android:padding="8dp"
            android:text="@{message.formattedDate}"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:visibility="@{adapter.showDate ? view.VISIBLE : view.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="23 March" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/outgoing_message_background"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/text"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="right"
                android:maxWidth="300dp"
                android:onClick="@{() -> adapter.onOpen(message)}"
                app:imageUrl="@{message.text}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                fresco:placeholderImage="@drawable/ic_image_white_24dp"
                fresco:failureImage="@drawable/ic_image_white_24dp"
                fresco:roundedCornerRadius="5dp" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@{String.valueOf(message.formattedTime)}"
            android:textColor="@color/colorSecondaryText"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/message"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/message"
            app:layout_constraintTop_toBottomOf="@+id/message"
            tools:text="10:23" />
    </android.support.constraint.ConstraintLayout>
</layout>